
	<div class="widget">
		<div class="widget-header">
			<i class="icon-file"></i>
			<h3>Note</h3>
		</div> <!-- /widget-header -->
		<div class="widget-content">
				    	<form ng-submit="noteCreate()" ng-model="note">
				    	    <div class="pull-right span3">
                              <img ng-show="note.person.image.length" src="/linkedin_images/{{note.person.image}}.jpeg" class="media-object connection"></a>
                              <img ng-hide="note.person.image.length" src="<%= image_path("default_profile.png") %>"  class="media-object connection">

                              <div class="media-body">
                                <div class="media-heading">
                                  <a ng-click="notePerson()" class="connection">
                                    {{note.person.first_name}} {{note.person.last_name}}
                                  </a>
                                </div>
                              </div>

                            </div>
				    		<input type="text" ng-model="note.title" placeholder="Title..." class="input-xlarge"/>
				    		<br>
				    		<label class="checkbox inline"><input type="checkbox" ng-model="note.task">Task</label>
				    		<label class="checkbox inline"><input type="checkbox" ng-model="note.reminder">Reminder</label>
				    		<label class="checkbox inline"><input type="checkbox" ng-model="note.task_status">Closed</label>
				    		<label>Date:</label>
                            <input id="action_date" type="text" ng-model="note.action_date" placeholder="08/30/2013 15:00">
				    		<div class="help-block">Example: 08/30/2013 15:00</div>
                            <label>Message:</label>
				    		<textarea id="message" class="input-block-level" rows="6" ng-model="note.body"></textarea>
				    		<label>Related Profile:</label>
				    		<input type="text" ng-model="note.related_profile_id">
				    		<div class="form-actions">
				    			<button type="submit" class="btn btn-primary">Submit</button>
				    			<br>
								<div ng-show="message.type.length" class="alert alert-{{message.type}}">
					          		<button type="button" class="close" data-dismiss="alert">&times;</button>
					          		<br>
					          		{{message.message}}
					        	</div>
				    		</div>
				    	</form>
		</div><!--end content div-->
	</div>
