<!-- notes partial -->
  <div class="widget stacked">
      <div class="widget-header">
        <i class="icon-check"></i>
        <h3>Tasks</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">

      <div class="accordion" id="accordion-tasks">
        <div ng-show="note.task && !note.task_status" class="accordion-group note-{{note.id}}" ng-repeat="note in notes">
          <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-tasks" href="#tasks-{{$index + 1}}">
              {{ note.title }} 
              <span ng-show="note.id">@</span> {{ note.created_at | formatDate }} 
              <a ng-show="note.id" class="edit-note" ng-click="editNote()"><i class="icon-edit"></i></a>
              <a ng-show="note.id" class="edit-note" ng-click="deleteNote()"><i class="icon-remove-circle"></i></a>
            </a>
          </div>
          <div id="tasks-{{$index + 1}}" class="accordion-body collapse">
            <div class="accordion-inner">
              {{ note.body }}
            </div>
          </div>
        </div>
      </div>

  </div>
</div>